{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true
  },
  "include": ["./build", "./src", "./deployed.json"],
  "compileOnSave": true
}
